{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [],
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ]        
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],
    "output": "docs",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
	  "_appLogoPath": "images/bassman.svg",
	  "_appFaviconPath": "images/bassman.ico",
      "_appName": "Bassman",
      "_appTitle": "Bassman",
	  "_appFooter": "Copyright 2025 Â© by Ralf Beckers",
      "_enableSearch": true,
      "pdf": false
    }
  }
}